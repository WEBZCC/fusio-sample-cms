{
  "definitions": {
    "Collection": {
      "type": "object",
      "properties": {
        "totalResults": {
          "type": "integer"
        },
        "entry": {
          "type": "array",
          "items": {
            "$generic": "T"
          }
        }
      }
    },
    "Message": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "Page_Collection": {
      "$ref": "Collection",
      "$template": {
        "T": "Page"
      }
    },
    "Page": {
      "type": "object",
      "properties": {
        "parentId": {
          "type": "integer"
        },
        "status": {
          "type": "integer"
        },
        "sort": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "blocks": {
          "type": "array",
          "items": {
            "oneOf": [{
              "$ref": "Block_Code"
            }, {
              "$ref": "Block_Headline"
            }, {
              "$ref": "Block_Image"
            }, {
              "$ref": "Block_Paragraph"
            }, {
              "$ref": "Block_Post"
            }]
          }
        },
        "insertDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Block_Code": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "code"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["type", "content"]
    },
    "Block_Headline": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "headline"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["type", "content"]
    },
    "Block_Image": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "image"
        },
        "src": {
          "type": "string"
        }
      },
      "required": ["type", "src"]
    },
    "Block_Paragraph": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "paragraph"
        },
        "content": {
          "type": "string"
        }
      },
      "required": ["type", "content"]
    },
    "Block_Post": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "post"
        }
      },
      "required": ["type"]
    },
    "Post_Collection": {
      "$ref": "Collection",
      "$template": {
        "T": "Post"
      }
    },
    "Post": {
      "type": "object",
      "properties": {
        "pageId": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "insertDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}