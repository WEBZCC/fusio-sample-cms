      "name": "Christoph Kappestein",
      "email": "christoph.kappestein@gmail.com",
      "homepage": "http://christoph.kappestein.com"
    }
  ],
  "scripts": {
    "tests": "@php vendor/phpunit/phpunit/phpunit --configuration phpunit.xml tests",
    "generate-model": "@php gen/gen_model.php",
    "generate-sdk": "@php bin/fusio api:generate --format=client-php --filter=backend --config=Fusio\\Sdk\\Generated\\Backend ."
  },
  "require": {
    "php": ">=8.0",
    "fusio/impl": "^6.0",
    "symfony/dotenv": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "guzzlehttp/guzzle": "^7.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  }
}
